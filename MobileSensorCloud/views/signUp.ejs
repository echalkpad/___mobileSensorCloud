<html>
<head>
<script src= "http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
<script src="/angularJS/signUpController.js"></script>
</head>
<body ng-app="sensorCloud">
	<form ng-controller="customerSignup" id="customerSignup" ng-submit="submit();">
	Customer Registration<br/>
	<table>
	<tr><td>Email:</td><td><input type="email" ng-model="email"></td></tr>
	<tr><td>Password:</td><td><input type="password" ng-model="password"></td></tr>
		<tr><td>First Name:</td><td><input type="text" ng-model="firstName"></td></tr>
		<tr><td>Last Name:</td><td><input type="text" ng-model="lastName"></td></tr>
		<tr><td>Address:</td><td><textarea rows="4" cols="50" ng-model="address"></textarea></td></tr>
		<tr><td>Phone:</td><td><input type="number" ng-model="phone"></td></tr>
		<tr><td colspan="2"><input type="submit" value="Sign Up"></td></tr>
	</table>
	</form>
</body>
</html>