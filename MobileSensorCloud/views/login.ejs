<html>
<head>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
<link rel='stylesheet' href='/stylesheets/style.css' />
<script type="text/javascript">
	$(document).ready(function()
	{
		$(".tab").click(function()
		{
			var X=$(this).attr('id');
			if(X=='sensorAdminLogin')
			{
				$("#sensorAdminLogin").removeClass('sensorAdminLogin');
				$("#customerLogin").addClass('sensorAdminLogin');
				$("#customerLoginBox").slideUp();
				$("#sensorAdminLoginBox").slideDown();
			}
			else
			{
				$("#customerLogin").removeClass('sensorAdminLogin');
				$("#sensorAdminLogin").addClass('sensorAdminLogin');
				$("#sensorAdminLoginBox").slideUp();
				$("#customerLoginBox").slideDown();
			}
		});
	});
</script>
<script src= "http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
<script type="text/javascript" src="/angularJS/signInController.js">
	
</script>
</head>
<body ng-app="sensorCloud">
	<div id="loginContainer">
	<div id="tabbox">
	<a href="#" id="customerLogin" class="tab customerLogin">Login as Customer</a>
	<a href="#" id="sensorAdminLogin" class="tab sensorAdminLogin">Login as Sensor Admin</a>
	</div>
	<div id="panel">
		<div id="customerLoginBox">
			<form ng-controller="customerLogin" id="customerLoginForm" ng-submit="submit();">
			<table align="center">
				<tr><td><h4>Customer Login</h4></td></tr>
				<tr><td>Username:</td><td><input type="text" ng-model="customerEmail" id="customerEmail"></input></td></tr>
				<tr><td>Password:</td><td><input type="password" ng-model="customerPassword" id="customerPassword"></input></td></tr>
				<tr><td><input type="submit" value="Customer Login"></input></td></tr>
			</table>
			</form>
		</div>
		<div id="sensorAdminLoginBox">
			<form ng-controller="sensorAdminLogin" id="sensorAdminLogin" ng-submit="submit();">
			<table align="center">
				<tr><td><h4>Sensor Admin Login</h4></td></tr>
				<tr><td>Username:</td><td><input type="text" ng-model="sensorAdminEmail" id="sensorAdminEmail"></input></td></tr>
				<tr><td>Password:</td><td><input type="password" ng-model="sensorAdminPassword" id="sensorAdminPassword"></input></td></tr>
				<tr><td><input type="submit" value="Sensor Admin Login"></input></td></tr>
			</table>
			</form>
		</div>
	</div>
	</div>
</body>
</html>