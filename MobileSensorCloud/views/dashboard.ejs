<html ng-app="sensorCloud">
<head>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/loginPageStyles.css' />
    <script type="text/javascript" src="/js/loginPage.js"></script>
    <script src= "http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    <script src="/angularJS/mobileSensorCloudRouting.js"></script>
    <script src="/angularJS/dashboardController.js"></script>
    <script src="/angularJS/addSensorHubController.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.8/angular-ui-router.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.1/Chart.bundle.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.1/Chart.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.1/Chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.1/Chart.min.js"></script>
    <script type="text/javascript">
    	$(document).ready(function(){
		   $("li a").click(function(){
			   $("li a.active").removeClass("active");
			   $(this).addClass("active");
			});
		});
    </script>
    <style>
        body{
            background:#f8f8f8;
            margin: 0;
            padding-top:0px;
            padding-bottom:0px;
            padding-left:0px;
            padding-right:0px;
        }
        .row{
            margin-left:0px;
            margin-right:0px;
        }
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            background-color: black;
            height: 100%;
            width:20%;
        }

        li a {
            display: block;
            color: white;
            padding: 8px 0 8px 16px;
            text-decoration: none;
        }
        li a.active {
            background-color: #810541;
            color: white;
        }
        /* Change the link color on hover */
        li a:hover {
            background-color: #810541;
            color: white;
        }
        /* Search box styles*/
        .stylish-input-group .input-group-addon{
		    background: white !important; 
		}
		.stylish-input-group .form-control{
			border-right:0; 
			box-shadow:0 0 0; 
			border-color:#ccc;
		}
		.stylish-input-group button{
		    border:0;
		    background:transparent;
		}
		.huge {
		    font-size: 20px;
		}
		.panel-green .panel-heading {
		    border-color: #5cb85c;
		    color: #fff;
		    background-color: #5cb85c;
		}
		.panel-yellow .panel-heading {
		    border-color: #f0ad4e;
		    color: #fff;
		    background-color: #f0ad4e;
		}
		.panel-red .panel-heading {
		    border-color: #d9534f;
		    color: #fff;
		    background-color: #d9534f;
		}
    </style>
</head>
<body ng-controller="customerCtrl">
	<div class="row" style="height:70px;background-color:black;">
	    <p style="font-size:32px;margin-top:12px;color:white">&nbsp;Sensor Management Console</p>
	    <br/>
	</div>
	<div class="row">
		<div class="col-sm-2" style="padding-left: 0px;padding-right: 0px;">
		<div class="input-group stylish-input-group" style="width: 220px;">
            <input type="text" class="form-control"  placeholder="Search" >
            <span class="input-group-addon">
                <button type="submit">
                    <span class="glyphicon glyphicon-search"></span>
                </button>  
            </span>
        </div>
	    <ul style="width:220px;">
	        <li><a class="active" ui-sref="dashboard">Dashboard</a></li>
	        <li><a ui-sref="sensorStats">Sensor Statistics</a></li>
	        <li><a ui-sref="sensorProvider">Sensor Provider</a></li>
	        <li><a ui-sref="profile">Profile</a></li>
	    </ul>
	    </div>
	    <div class="col-sm-10">
	    <div ui-view></div>
	    </div>
	<div>
</body>
</html>